<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="My Certificate"
    android:textColor="#949494"
    app:layout_constraintStart_toStartOf="parent"
    android:layout_marginStart="20dp"
    android:textAppearance="@style/text_view_exercise_title"
    tools:ignore="MissingConstraints" />
    <androidx.cardview.widget.CardView
        android:id="@+id/cardView1"
        android:layout_width="wrap_content"
        android:layout_height="190dp"
        app:layout_constraintTop_toTopOf="parent"
        app:cardCornerRadius="10dp"
        android:layout_marginTop="30dp"
        app:cardElevation="10dp"
        app:cardBackgroundColor="@color/white"
        app:cardMaxElevation="12dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        tools:ignore="MissingConstraints">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="40dp"
                android:id="@+id/logoImage"
                android:layout_height="40dp"
                android:layout_marginStart="10dp"
                android:src="@drawable/python_logo"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="python"
                android:textColor="#000000"
                android:layout_toEndOf="@+id/logoImage"
                android:textSize="20sp"
                android:layout_marginStart="10dp"
                />
            <TextView
                android:id="@+id/downlaod_certificate_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Download Certificate"
                android:onClick="downloadCertificate"
                android:textColor="@color/green"
                android:layout_below="@+id/logoImage"
                android:layout_marginTop="20dp"
                android:textSize="17sp"
                android:textAppearance="@style/AlertTextAppearance.Title"
                android:layout_marginStart="30dp"
                android:drawableStart="@drawable/baseline_download_24"/>
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="  20 dec 2022"
    android:drawableStart="@drawable/baseline_check_circle_24"
    android:layout_alignParentEnd="true"
    android:layout_marginEnd="13dp"
    android:padding="8dp"
    android:textAppearance="@style/AlertTextAppearance.Title"
    android:textColor="#C41C0F0F"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView2"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/cardView1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="10dp"
        android:layout_margin="20dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="40dp"
                android:id="@+id/secondlogoImage"
                android:layout_height="40dp"
                android:layout_marginStart="10dp"
                android:src="@drawable/python_logo"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Spoken English"
                android:textColor="#000000"
                android:layout_toEndOf="@+id/secondlogoImage"
                android:textSize="15sp"
                android:layout_marginStart="10dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Download Certificate"
                android:textColor="@color/green"
                android:textSize="17sp"
                android:textAppearance="@style/AlertTextAppearance.Title"
                android:layout_alignParentBottom="true"
                android:lastBaselineToBottomHeight="30dp"
                android:layout_marginStart="30dp"
                android:drawableStart="@drawable/baseline_download_24"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  25 dec 2022"
                android:drawableStart="@drawable/baseline_check_circle_24"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="13dp"
                android:padding="8dp"
                android:textAppearance="@style/AlertTextAppearance.Title"
                android:textColor="#C41C0F0F"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
