<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_navigation"
    app:startDestination="@+id/navigation_chat">

    <fragment
        android:id="@+id/navigation_chat"
        android:name="org.navgurukul.chat.features.home.room.list.ChatListFragment"
        android:label="@string/title_chat"
        tools:layout="@layout/fragment_chat" />

    <fragment
        android:id="@+id/navigation_learn"
        android:name="org.navgurukul.learn.ui.learn.LearnFragment"
        android:label="@string/title_learn"
        tools:layout="@layout/fragment_learn" />

    <activity
        android:id="@+id/navigation_playground"
        android:name="org.navgurukul.playground.ui.PlaygroundActivity"
        android:label="@string/title_playground"
        tools:layout="@layout/fragment_playground" />

    <fragment
        android:id="@+id/navigation_more"
        android:name="org.navgurukul.saral.ui.more.MoreFragment"
        android:label="@string/title_more"
        tools:layout="@layout/fragment_more" />
