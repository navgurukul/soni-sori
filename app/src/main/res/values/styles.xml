<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="text_view_title">
        <item name="android:textSize">32sp</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:padding">@dimen/dimen_10_dp</item>
        <item name="android:fontFamily">@font/n_bold</item>
        <item name="android:layout_marginTop">@dimen/dimen_20_dp</item>
        <item name="android:layout_marginBottom">@dimen/dimen_10_dp</item>
        <item name="android:layout_marginEnd">@dimen/dimen_5_dp</item>
        <item name="android:layout_marginStart">28dp</item>
    </style>

    <style name="text_view_home_title">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:fontFamily">@font/n_bold</item>
        <item name="android:layout_margin">@dimen/dimen_5_dp</item>
    </style>

    <style name="text_view_description">
        <item name="android:textSize">22sp</item>
        <item name="android:padding">@dimen/dimen_10_dp</item>
        <item name="android:layout_marginEnd">@dimen/dimen_5_dp</item>
        <item name="android:fontFamily">@font/n_regular</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:layout_marginStart">28dp</item>
    </style>

    <style name="text_view_powered_by">
        <item name="android:textSize">12sp</item>
        <item name="android:padding">@dimen/dimen_10_dp</item>
        <item name="android:layout_margin">@dimen/dimen_10_dp</item>
        <item name="android:fontFamily">@font/n_regular</item>
        <item name="android:layout_marginTop">@dimen/dimen_10_dp</item>
        <item name="android:textColor">@color/colorBlack</item>
    </style>

    <style name="text_view_get_started">
        <item name="android:textSize">20sp</item>
        <item name="android:padding">@dimen/dimen_10_dp</item>
        <item name="android:layout_margin">@dimen/dimen_5_dp</item>
        <item name="android:fontFamily">@font/n_regular</item>
        <item name="android:layout_marginTop">@dimen/dimen_10_dp</item>
        <item name="android:layout_marginStart">60dp</item>
        <item name="android:layout_marginEnd">60dp</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="text_view_button_language">
        <item name="android:layout_width">260dp</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:padding">@dimen/dimen_15_dp</item>
        <item name="fontFamily">@font/nunito</item>
        <item name="android:layout_marginTop">@dimen/dimen_16_dp</item>
        <item name="android:layout_marginStart">@dimen/dimen_55_dp</item>
        <item name="android:layout_marginEnd">@dimen/dimen_55_dp</item>
        <item name="android:foreground">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:elevation">@dimen/dimen_2_dp</item>
        <item name="android:textAlignment">center</item>
    </style>
    <style name="google_sign_in">
        <item name="android:background">@drawable/google_sign_in_bg</item>
        <item name="android:textColor">@color/on_boarding_green_color</item>
        <item name="android:drawableStart">@drawable/google_icon</item>
        <item name="android:paddingStart">@dimen/dimen_75_dp</item>
        <item name="android:paddingEnd">@dimen/dimen_75_dp</item>
        <item name="singleLine">true</item>
        <item name="fontFamily">@font/nunito</item>
        <item name="textAllCaps">false</item>
        <item name="android:layout_margin">@dimen/dimen_5_dp</item>
    </style>



</resources>