<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="text_view_title">
        <item name="android:textSize">32sp</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:padding">@dimen/dimen_10_dp</item>
        <item name="android:fontFamily">@font/n_bold</item>
        <item name="android:layout_marginTop">@dimen/dimen_20_dp</item>
        <item name="android:layout_marginBottom">@dimen/dimen_10_dp</item>
        <item name="android:layout_marginEnd">@dimen/dimen_5_dp</item>
        <item name="android:layout_marginStart">28dp</item>
    </style>

    <style name="text_view_home_title">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:fontFamily">@font/n_bold</item>
        <item name="android:layout_margin">@dimen/dimen_5_dp</item>
    </style>

    <style name="text_view_description">
        <item name="android:textSize">22sp</item>
        <item name="android:padding">@dimen/dimen_10_dp</item>
        <item name="android:layout_marginEnd">@dimen/dimen_5_dp</item>
        <item name="android:fontFamily">@font/n_regular</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:layout_marginStart">28dp</item>
    </style>

    <style name="text_view_powered_by">
        <item name="android:textSize">12sp</item>
        <item name="android:padding">@dimen/dimen_10_dp</item>
        <item name="android:layout_margin">@dimen/dimen_10_dp</item>
        <item name="android:fontFamily">@font/n_regular</item>
        <item name="android:layout_marginTop">@dimen/dimen_10_dp</item>
        <item name="android:textColor">@color/colorBlack</item>
    </style>

    <style name="text_view_get_started">
        <item name="android:textSize">20sp</item>
        <item name="android:padding">@dimen/dimen_10_dp</item>
        <item name="android:layout_margin">@dimen/dimen_5_dp</item>
        <item name="android:fontFamily">@font/n_regular</item>
        <item name="android:layout_marginTop">@dimen/dimen_10_dp</item>
        <item name="android:layout_marginStart">60dp</item>
        <item name="android:layout_marginEnd">60dp</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="onBoardingHeaders">
        <item name="android:textSize">24sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:textColor">#2E2E2E</item>
        <item name="lineHeight">28sp</item>
        <item name="fontFamily">@font/nunito</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">2dp</item>
        <item name="android:layout_margin">3dp</item>
    </style>

    <style name="onBoardingMessages">
        <item name="android:textSize">20sp</item>
        <item name="android:textAlignment">center</item>
        <item name="fontFamily">@font/nunito</item>
        <item name="android:lineSpacingExtra">3dp</item>
        <item name="android:textColor">#2E2E2E</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:padding">2dp</item>
        <item name="android:layout_margin">3dp</item>
    </style>

    <style name="choose_learning_textview">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">@font/nunito</item>
        <item name="android:padding">5dp</item>
        <item name="android:textAlignment">center</item>
    </style>
    <style name="text_view_language_message">
        <item name="android:textSize">24sp</item>
        <item name="android:padding">5dp</item>
        <item name="fontFamily">@font/nunito_bold</item>
        <item name="android:layout_marginStart">17dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">#2E2E2E</item>
    </style>
    <style name="text_view_button_language">
        <item name="android:textSize">16sp</item>
        <item name="android:padding">20dp</item>
        <item name="fontFamily">@font/nunito</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginStart">60dp</item>
        <item name="android:layout_marginEnd">60dp</item>
        <item name="android:foreground">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:layout_weight">400</item>
        <item name="android:elevation">2dp</item>
        <item name="android:textAlignment">center</item>
    </style>



</resources>