<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/assesmentBackground"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/dimen_16_dp">


    <TextView
        android:id="@+id/tvText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimen_16_dp"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="@color/colorBlack"
        android:drawablePadding="@dimen/spacing_2x"
        tools:text="Letâ€™s dive in with a code sample"
        app:drawableStartCompat="@drawable/ic_reshot_icon" />

    <TextView
        android:id="@+id/codeBody"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimen_16_dp"
        android:layout_marginTop="4dp"
        android:textColor="@color/colorBlack"
        app:layout_constraintTop_toBottomOf="@id/tvText"
        tools:layout_editor_absoluteX="-9dp"
        tools:text="Hi Body" />
</androidx.constraintlayout.widget.ConstraintLayout>