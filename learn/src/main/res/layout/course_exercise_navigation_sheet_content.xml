<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/colorWhite">

    <View
        android:id="@+id/viewSeparator"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_1_dp"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/colorGrey"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/navigatePrev"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_3x"
        android:text="@string/back"
        android:textColor="@color/textGrey"
        android:textSize="@dimen/textSizeDefault"
        android:textAllCaps="false"
        app:icon="@drawable/ic_navigate_back"
        app:iconGravity="start"
        app:iconTint="@color/textGrey"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/viewSeparator" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/navigateNext"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/spacing_3x"
        android:text="@string/next"
        android:textColor="@color/primaryColor"
        android:textSize="@dimen/textSizeDefault"
        android:textStyle="bold"
        android:textAllCaps="false"
        app:icon="@drawable/ic_navigate_next"
        app:iconGravity="end"
        app:iconTint="@color/primaryColor"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnMain"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/spacing_3x"
        android:textColor="@color/primaryColor"
        android:textSize="@dimen/textSizeDefault"
        android:textStyle="bold"
        android:textAllCaps="false"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>