<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/code_background"
    android:paddingBottom="@dimen/dimen_16_dp"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/code_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/code_title_background"
        android:padding="@dimen/dimen_16_dp"
        android:textColor="@color/colorWhite"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Hi Title"></TextView>

    <org.navgurukul.learn.editor.LineNumberedEditText
        android:id="@+id/code_body"
        android:typeface="monospace"
        android:textSize="14sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="top"
        android:text="codeBody"
        android:scrollbars="horizontal|vertical"
        android:inputType="textMultiLine|textNoSuggestions|textVisiblePassword"
        android:background="@drawable/border_reset"
        android:layout_margin="@dimen/dimen_16_dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textColor="@color/colorBlack"
        app:layout_constraintTop_toBottomOf="@id/code_title" />

<!--    <Button-->
<!--        android:id="@+id/resetCode"-->
<!--        android:layout_width="wrap_content"-->
<!--        app:layout_constraintTop_toBottomOf="@id/code_body"-->
<!--        app:layout_constraintStart_toStartOf="parent"-->
<!--        android:layout_marginStart="16dp"-->
<!--        android:text="Reset Editor"-->
<!--        android:padding="3dp"-->
<!--        android:drawableLeft="@drawable/ic_baseline_restart_alt_24"-->
<!--        android:layout_marginTop="8dp"-->
<!--        android:background= "@drawable/border_reset"-->
<!--        android:textColor="@color/green_progress_color"-->
<!--        android:textAllCaps="false"-->
<!--        android:layout_height="wrap_content">-->
<!--    </Button>-->

    <Button
        android:id="@+id/run_btn"
        android:layout_width="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        android:textColor="@color/colorWhite"
        android:text="Run"
        android:padding="3dp"
        android:textAllCaps="false"
        android:layout_marginEnd="16dp"
        android:drawableEnd="@drawable/ic_baseline_arrow_right_24"
        android:layout_marginTop="8dp"
        android:backgroundTint="@color/green_progress_color"
        android:background="@drawable/border_reset"
        app:layout_constraintTop_toBottomOf="@id/code_body"
        android:layout_height="wrap_content">
    </Button>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:background="@color/colorWhite"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/run_btn">

        <TextView
            android:id="@+id/out_put_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:drawableLeft="@drawable/ic_baseline_cable_24"
            android:text=" OutPut"
            android:textColor="@color/colorBlack"
            android:textSize="20dp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"></TextView>

        <TextView
            android:id="@+id/Actual_outPut"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="20dp"
            android:text="outhput"
            tools:text="StringData"
            android:visibility="visible"
            android:textColor="@color/colorRed"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/out_put_txt">

        </TextView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>