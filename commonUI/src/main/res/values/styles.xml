<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorSecondary">@color/secondaryColor</item>
        <item name="colorError">@color/errorColor</item>

        <item name="colorPrimaryVariant">@color/primaryLightColor</item>
        <item name="colorSecondaryVariant">@color/secondaryLightColor</item>
        <item name="colorSurface">@color/design_default_color_surface</item>
        <item name="colorPrimarySurface">?attr/colorPrimary</item>
        <item name="colorOnPrimary">@color/primaryTextColor</item>
        <item name="colorOnSecondary">@color/secondaryTextColor</item>
        <item name="colorOnBackground">@color/textColor</item>
        <item name="colorOnError">@color/primaryTextColor</item>
        <item name="colorOnSurface">@color/textColor</item>
        <item name="colorOnPrimarySurface">?attr/colorOnPrimary</item>
        <item name="constructiveForeground">@color/constructiveForeground</item>

        <item name="textAppearanceEmphasized1">@style/TextAppearance.AppCompat.Emphasized1</item>
        <item name="textAppearanceEmphasized2">@style/TextAppearance.AppCompat.Emphasized2</item>
        <item name="textAppearanceBody1">@style/TextAppearance.AppCompat.Body1</item>
        <item name="textAppearanceBody2">@style/TextAppearance.AppCompat.Body2</item>
        <item name="textAppearanceCaption">@style/TextAppearance.AppCompat.Caption</item>
        <item name="textAppearanceCaption2">@style/TextAppearance.AppCompat.Caption2</item>
        <item name="textAppearanceSubtitle1">@style/TextAppearance.AppCompat.Subtitle1</item>

        <item name="textAppearanceHeadline6">@style/TextAppearance.AppCompat.Headline6</item>
        <item name="textAppearanceHeadline5">@style/TextAppearance.AppCompat.Headline5</item>

        <item name="cornerRadius100">2dp</item>
        <item name="cornerRadius200">4dp</item>
        <item name="cornerRadius300">6dp</item>
        <item name="cornerRadius400">8dp</item>

        <item name="elevation100">2dp</item>
        <item name="elevation200">4dp</item>

        <item name="borderWidth">1dp</item>

        <item name="textPrimary">@color/textColor</item>
        <item name="textBrand">@color/primaryColor</item>
        <item name="textSecondary">@color/textColorAlt</item>
        <item name="textContrast">@color/textColorContrast</item>
        <item name="backgroundColor">@color/backgroundColor</item>
        <item name="borderColor">@color/borderColor</item>

        <item name="colorBackgroundDisabled">@color/colorBackgroundDisabled</item>

        <item name="actionBarSize">@dimen/actionBarSize</item>

        <item name="actionOverflowMenuStyle">@style/PopupMenu</item>

    </style>

    <style name="AppTheme.Transparent" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="buttonTextAppearanceStyle" parent="@style/TextAppearance.MaterialComponents.Button">
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/nunito</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Popup Menu -->
    <style name="PopupMenu" parent="@style/Widget.MaterialComponents.PopupMenu">
        <item name="android:textSize">16sp</item>
    </style>

    <color name="colorBackgroundDisabled">#BEBEBE</color>
</resources>