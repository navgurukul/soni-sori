<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="260dp"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/info_dialog_background"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img"
            android:layout_width="118dp"
            android:layout_height="89dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="47dp"
            android:src="@drawable/ic_undraw_code_typing" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="123dp"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="12dp"
            android:background="@drawable/info_text_background"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_lbl_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="28dp"
                android:layout_marginTop="31dp"
                android:layout_marginRight="28dp"
                android:text="@string/info_text"
                android:textColor="@color/info_text_color"
                android:textSize="12sp" />

        </LinearLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_ok"
            android:layout_width="158dp"
            android:layout_height="45dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="19dp"
            android:background="@drawable/start_btn_selector"
            android:fontFamily="@font/nunito"
            android:text="@string/okay_understood"
            android:gravity="center_vertical|center_horizontal"
            android:textAllCaps="false"
            android:textColor="@color/colorWhite"
            android:textSize="14sp"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>